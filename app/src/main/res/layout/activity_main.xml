                    android:padding="8dp"
                    android:background="#3CF1EBF1"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/sunrise"
                        app:tint="#fff"
                        android:id="@+id/img1"
                        />

